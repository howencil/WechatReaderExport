{
  "name": "wechat-reader-export",
  "version": "1.0.0",
  "description": "微信读书笔记导出Chrome插件 - 支持Markdown、JSON、TXT多格式导出",
  "main": "dist/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist/*",
    "type-check": "tsc --noEmit",
    "package": "npm run clean && npm run build && cd dist && zip -r ../wechat-reader-export-v1.0.0.zip .",
    "release": "npm run package && echo 'Release package created: wechat-reader-export-v1.0.0.zip'"
  },
  "keywords": [
    "chrome-extension",
    "wechat-reading",
    "notes-export",
    "markdown",
    "productivity",
    "reading-tools",
    "知识管理",
    "笔记导出",
    "微信读书"
  ],
  "author": {
    "name": "WechatReaderExport",
    "url": "https://github.com/author/WechatReaderExport"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/author/WechatReaderExport.git"
  },
  "bugs": {
    "url": "https://github.com/author/WechatReaderExport/issues"
  },
  "homepage": "https://github.com/author/WechatReaderExport#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.7",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}